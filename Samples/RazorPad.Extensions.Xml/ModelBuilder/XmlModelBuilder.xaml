<UI:ModelBuilder x:Class="RazorPad.Extensions.Xml.XmlBuilder.XmlModelBuilder" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:UI="clr-namespace:RazorPad.UI;assembly=RazorPad.UI"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">

    <UI:DelayedNotifyPropertyChangedTextBox x:Name="ModelEditor" Grid.Row="1"
             Text="{Binding Path=Xml, UpdateSourceTrigger=Explicit}"
             AcceptsReturn="True" AcceptsTab="true" 
             AllowDrop="True" AutoWordSelection="True" />

</UI:ModelBuilder>
