<UserControl x:Class="RazorPad.Views.RazorTemplateEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:RazorPadExt="clr-namespace:RazorPad.UI.Wpf;assembly=RazorPad.UI">

    <RazorPadExt:DelayedNotifyPropertyChangedTextBox x:Name="TemplateTextBox"
             Text="{Binding Path=Template, UpdateSourceTrigger=Explicit}"
             AcceptsReturn="True" AcceptsTab="true" 
             AllowDrop="True" AutoWordSelection="True" />

</UserControl>
